- if @event.errors.any?
  .alert-box.alert{ data: { alert: true } }
    = "#{ pluralize(@event.errors.count, "error") } prevented this event from being saved"
    =link_to "&times;".html_safe, "#", class: "close"

= form_for @event do |f|
  = f.text_field :name

  = f.fields_for :event_seeds do |fs|
    = fs.text_field :url

    = fs.fields_for :event_generators do |fg|
      = fg.select :frequency, [ [ "Weekly", 1 ] , [ "Intermittent", 0 ] ], include_blank: true

      = fg.date_field :start_date

  = f.button "Create event"